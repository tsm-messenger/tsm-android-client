<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/view_min_margin">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Small Text"
        android:id="@+id/tv_item_main_invite_group"
        android:background="#ae6f6f6f"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:focusableInTouchMode="false"
        android:id="@+id/tv_item_spaceRow" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Small Text"
        android:id="@+id/tv_item_main_group"
        android:background="#ae6f6f6f"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/tv_item_main_avatar"
            android:layout_width="@dimen/imgAvatar_sideLength"
            android:layout_height="@dimen/imgAvatar_sideLength"
            android:background="@drawable/ava_background_yellow"
            android:textSize="@dimen/imgAvatar_textSize"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/tv_item_main_connect_stat"
            android:layout_width="@dimen/tbOnline_sideLength"
            android:layout_height="@dimen/tbOnline_sideLength"
            android:layout_margin="@dimen/view_min_margin"
            android:textSize="@dimen/imgAvatar_textSize"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:background="@drawable/status_offline" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/plainText_padding"
                        android:id="@+id/tv_item_main_Name"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_item_main_info"
                        android:padding="@dimen/plainText_padding"
                        android:textColor="@color/black" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_item_main_status"
                    android:layout_width="@dimen/btn_info_listitem_sideLength"
                    android:layout_height="@dimen/btn_info_listitem_sideLength"
                    android:background="@drawable/ic_info_outline_black_24dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/tv_item_main_reject"
                    android:layout_width="@dimen/btn_info_listitem_sideLength"
                    android:layout_height="@dimen/btn_info_listitem_sideLength"
                    android:background="@drawable/ic_remove_circle_outline_black_24dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/view_min_margin"
                android:background="@color/grey"
                android:layout_gravity="bottom"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>