<resources>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@color/light100_background</item>

        <item name="android:textColor">@color/dark_primary_text</item>
        <item name="android:textColorPrimary">@color/dark_primary_text</item>
        <item name="android:textColorSecondary">@color/dark_secondary_text</item>
        <item name="android:textColorHint">@color/dark_hint_text</item>
        <item name="android:divider">@color/dark_divider</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="h1">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/h1_height</item>
        <item name="android:padding">@dimen/h1_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/h1_textSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="label">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="lblBig" parent="label">
        <item name="android:padding">@dimen/h1_padding</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textSize">@dimen/h2_textSize</item>
    </style>

    <style name="textBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/btn_std_width</item>
        <item name="android:layout_height">@dimen/btn_std_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/plainText_padding</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textSize">@dimen/h4_textSize</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_dialog" parent="button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:minHeight">@dimen/btn_std_height</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="btn_header_word">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/h3_textSize</item>
    </style>

    <style name="checkBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/h4_textSize</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="checkBox_tb">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tb_one_line_height</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="lblAva">
        <item name="android:layout_width">@dimen/imgAvatar_sideLength</item>
        <item name="android:layout_height">@dimen/imgAvatar_sideLength</item>
        <item name="android:background">@drawable/ava_background_yellow</item>
        <item name="android:textSize">@dimen/imgAvatar_textSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
